<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Id Post</th>
              <th>Author Email</th>
              <th>Title</th>
              <th>Category</th>
              <th>Comentaries</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.user.email %></td>
                    <td><%= post.title %></td>
                    <td><%= post.category.name %></td>
                    <td><%= post.comments.count %></td>
                    <td>
                    <div class="btn-group" role="group">
                      <%= link_to post_path(post), class: "btn btn-primary" do %>
                        show
                        <% end %>

                        <%= link_to edit_post_path(post), class: "btn btn-warning" do %>
                        edit
                        <% end %>

                        <%= button_to post_path(post), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" do %>
                        delete
                        <% end %>
                    </div>
                    </td>

                </tr>
            <% end %>
          </tbody>
        </table>
      </div>